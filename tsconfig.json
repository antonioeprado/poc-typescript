{
  "compilerOptions": {
    "target": "es2020",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "CommonJS",
    "noImplicitAny": true,
    "outDir": "dist",
    "esModuleInterop": true,
    // "moduleResolution": "Node",
    "rootDirs": ["src"],
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    },
    "plugins": [
      {
        "transform": "typescript-transform-paths"
      }
    ]
    // "module": "es6"
  },
  "ts-node": {
    "esm": true
  },
  "include": ["src"]
}
